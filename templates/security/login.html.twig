{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

    {% set vars = {'login': 'active'} %}

    {% include 'index_user_page/spinner_start.html.twig' %}
    {% include 'index_user_page/topbar_start.html.twig' %}
    {% include 'index_user_page/navbar_start.html.twig' with vars %}

    <div class="container">
            <div class="row">
                <div class="bg-light mt-5 p-5 col-lg-5 horizontal-form-center shadow-forms">
                    <form method="post">

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                            <h1 class="h3 mb-3 font-weight-normal">Logowanie</h1>
                                <label for="inputEmail">Email</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb10" autocomplete="email" required autofocus>
                                <label for="inputPassword">Hasło</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div>
                                <button class="btn btn-lg btn-primary mt20 col-lg-12" type="submit">
                                    Zaloguj się
                                </button>
                    </form>
                </div>
            </div>
        </div>
    {% include 'index_user_page/footer_start.html.twig' %}
    {% include 'index_user_page/copyright_start.html.twig' %}
{% endblock %}
